{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base/legacy"
  ],
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  "rules": {
    // these are only here because I did not
    // want to update the entire codebase ¯\_(ツ)_/¯
    "semi": 0,
    "func-names": 0,
    "no-var": 0,
    "func-style": 0,
    "comma-dangle": 0,
    "valid-jsdoc": 0,
    "vars-on-top": 0,
    "complexity": [2, 8],
    "max-depth": [2, 6],
    "consistent-return": 0,
    "id-match": 0,
    "import/newline-after-import": 0,
    // es6 stuff we technically can not do yet
    "strict": 0,
    "object-shorthand": 0,
    "prefer-arrow-callback": 0,
    "prefer-template": 0,
    "babel/object-shorthand": 0,
  },
  "globals": {
    "describe": false,
    "xdescribe": false,
    "it": false,
    "expect": false,
    "$on": false,
    "beforeEach": false,
    "afterEach": false,
    "reqlib": false,
    "Promise": false,
    "test": false,
    "xtest": false,
    "afterAll": false,
    "beforeAll": false,
    "require": false,
    "_": false,
    "await": false,
    "jest": false
  }
}
